<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="log" transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- 20150925 该写法在karaf4.x中不适用，只能用于karaf3.0.x版本中
		<jta-data-source>osgi:service/permission</jta-data-source>
		-->
		<!-- Only used when transaction-type=JTA -->
		<!--20160117暂时屏蔽 
        <jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=permission)</jta-data-source>
         -->
        <!-- Only used when transaction-type=RESOURCE_LOCAL -->
        <!-- 20160117暂时屏蔽 
        <non-jta-data-source>osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=permission)</non-jta-data-source>
		 -->
		<!-- 配置二级缓存的策略共享，默认为ENABLE_SELECTIVE，官方推荐保持该默认值，每个实体默认不缓存，需要缓存则进行注解-->
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

		<properties>
		
			<!-- 20160117 :JTA环境下的设置 可以代替上面的jta-data-source -->
			<property name="hibernate.connection.datasource" value="osgi:service/javax.sql.DataSource/(osgi.jndi.service.name=permission)"/>	
			
			
			<!-- 使用这个会报警告：Overriding hibernate.transaction.factory_class is dangerous, this might break the EJB3 specification implementation			
			<property name="hibernate.transaction.factory_class" value="org.hibernate.engine.transaction.internal.jta.JtaTransactionFactory"/>
				 -->			
			<!-- 20160117：想用普通模式连接数据库，但一直报No suitable driver，测试未通过，估计是osgi数据库驱动的问题
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/test?useUnicode=true&amp;characterEncoding=utf8"/>
			<property name="connection.username" value="root"/>
			<property name="connection.password" value=""/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>        
			<property name="connection.autoReconnect" value="true"/>
			<property name="connection.autoReconnectForPools" value="true"/> 
			<property name="connection.is-connection-validation-required" value="true" />
			<property name="connection.release_mode" value="auto"/>
			-->
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
				
			
			<!--  二级缓存设置区 -->
			<property name="hibernate.cache.use_second_level_cache" value="false" />
			<!-- Disable the second-level cache  
        	<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.internal.NoCachingRegionFactory"/>
			-->
			<!-- 使用EnCache -->
			<!--  	
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/> 
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"/>
			使用下面ehcache自带的无法使用
			<property name="hibernate.cache.region.factory_class" value="net.sf.ehcache.hibernate.SingletonEhCacheRegionFactory"/> 		
			<property name="hibernate.cache.region.factory_class" value="net.sf.ehcache.hibernate.EhCacheRegionFactory"/> 
			--> 
			<!-- 
			<property name="hibernate.cache.provider_class" value="net.sf.ehcache.hibernate.EhCacheProvider"/>
			 -->
			<property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.SingletonEhCacheRegionFactory"/> 			  

			<property name="hibernate.cache.provider_configuration_file_resource_path" value="ehcache.xml"/>

			<!-- end of second-level cache properties -->	
				
			<!-- 测试参数区，生产环境需要关闭或删除 -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.generate_statistics" value="true" />
			<!-- 强制Hibernate以更人性化的格式将数据存入二级缓存 -->  
			<property name="hibernate.cache.use_structured_entries" value="true"/>
			<!-- end of test properties -->
			
			<!-- c3p0连接池 -->
<!-- 20160117 注意: JTA下不能使用c3p0 
			<property name="hibernate.connection.provider_class" value="org.hibernate.c3p0.internal.C3P0ConnectionProvider"/>  
	 -->	
			<property name="c3p0.min_size"  value="5"/>
			<property name="c3p0.max_size" value="30"/>
			<property name="c3p0.time_out" value="1800"/> <!-- seconds --><!-- default: 0 -->
			<property name="c3p0.max_statement" value="50"/> <!-- default: 0 -->
			<property name="c3p0.acquire_increment" value="1"/> <!-- default: 1 -->
			<property name="c3p0.idle_test_period" value="120"/> <!-- seconds --><!-- default: 0 -->
			<property name="c3p0.validate" value="true"/>
			<property name="hibernate.c3p0.preferredTestQuery" value="select 1"/>
			
			
			<!-- 非建议设置项 -->
			<!-- shared-cache-mode和javax.persistence.sharedCache.mode的作用一样,见上面shared-cache-mode的描述 -->
			<property name="javax.persistence.sharedCache.mode" value="ENABLE_SELECTIVE" />

		<!-- openjpa选项
	      <property name="openjpa.Log" value="DefaultLevel=INFO, Tool=INFO"/>
	      <property name="openjpa.jdbc.DBDictionary" value="h2"/>
	      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>
	       -->
	    </properties>
	</persistence-unit>
</persistence>
